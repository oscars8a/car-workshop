<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="partner_vehicles" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">fleet.vehicle</field>
            <field name="context">{'search_default_customer_id': active_id}</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="view_type">form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('car_workshop_fleet_vehicle_view_kanban')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('car_workshop_fleet_vehicle_view_form')})]"
            />
            <field name="target">current</field>
        </record>

        <record id="partner_repairs" model="ir.actions.act_window">
            <field name="name">Repairs</field>
            <field name="res_model">car_workshop.repair</field>
            <field name="context">{'search_default_partner_id': active_id}</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('car_workshop_repair_view_tree')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('car_workshop_repair_view_kanban')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('car_workshop_repair_view_form')})]"
            />
            <field name="target">current</field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name"> view.partner.form </field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr='//div[@name="button_box"]' position='inside'>
                    <button class="oe_stat_button" type="action" icon="fa-car"
                        name="%(car_workshop.partner_vehicles)d"
                        help="Vehicles related with this contact"
                        attrs="{'invisible': [('customer', '=', False)]}">
                        <field string="Vehicles" name="vehicles_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr='//div[@name="button_box"]' position='inside'>
                    <button class="oe_stat_button" type="action" icon="fa-wrench"
                        name="%(car_workshop.partner_repairs)d"
                        help="Repairs related with this contact"
                        attrs="{'invisible': [('customer', '=', False)]}">
                        <field string="Repairs" name="repairs_count" widget="statinfo"/>
                    </button>
                </xpath>
                <field name="mobile" position="attributes">
                    <attribute name="attrs">{'required':[True]}</attribute>
                </field>
            </field>
        </record>
        
    </data>
</openerp>
